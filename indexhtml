    <script>
        const questionsData = [
            {
                "question": "Quelle est la capitale de la France ?",
                "answer": "Paris"
            },
            {
                "question": "Combien de jours y a-t-il dans une semaine ?",
                "answer": "7 jours"
            },
            {
                "question": "Quel est le plus grand océan du monde ?",
                "answer": "L'océan Pacifique"
            },
            {
                "question": "Qui a peint la Joconde ?",
                "answer": "Léonard de Vinci"
            },
            {
                "question": "Quelle planète est connue comme la planète rouge ?",
                "answer": "Mars"
            },
            {
                "question": "Combien de côtés a un triangle ?",
                "answer": "Trois"
            },
            {
                "question": "Quel est le symbole chimique de l'eau ?",
                "answer": "H₂O"
            },
            {
                "question": "En quelle année l'homme a-t-il marché sur la Lune pour la première fois ?",
                "answer": "1969"
            }
            // Ajoutez plus de questions ici
        ];

        const questionArea = document.getElementById('question-area');
        const answerArea = document.getElementById('answer-area');
        const showAnswerBtn = document.getElementById('show-answer-btn');
        const nextQuestionBtn = document.getElementById('next-question-btn');

        let currentQuestion = null;
        let lastQuestionIndex = -1;

        function getRandomQuestion() {
            if (questionsData.length === 0) {
                questionArea.textContent = "Aucune question disponible.";
                answerArea.style.display = 'none';
                showAnswerBtn.style.display = 'none';
                nextQuestionBtn.style.display = 'none';
                return;
            }

            let randomIndex;
            // Assure qu'on ne tire pas la même question deux fois de suite si possible
            if (questionsData.length > 1) {
                do {
                    randomIndex = Math.floor(Math.random() * questionsData.length);
                } while (randomIndex === lastQuestionIndex);
            } else {
                randomIndex = 0;
            }

            lastQuestionIndex = randomIndex;
            return questionsData[randomIndex];
        }

        function displayQuestion() {
            currentQuestion = getRandomQuestion();
            if (currentQuestion) {
                questionArea.textContent = currentQuestion.question;
                answerArea.style.display = 'none'; // Cacher la réponse précédente
                answerArea.textContent = ''; // Effacer le contenu de la réponse précédente
                showAnswerBtn.disabled = false; // Activer le bouton pour afficher la réponse
                showAnswerBtn.style.display = 'inline-block';
            } else {
                // Gérer le cas où il n'y a plus de questions (si la liste est vidée dynamiquement par ex.)
                questionArea.textContent = "Fin du quiz !";
                answerArea.style.display = 'none';
                showAnswerBtn.style.display = 'none';
            }
        }

        showAnswerBtn.addEventListener('click', () => {
            if (currentQuestion) {
                answerArea.textContent = currentQuestion.answer;
                answerArea.style.display = 'block';
                showAnswerBtn.disabled = true; // Désactiver le bouton une fois la réponse affichée
            }
        });

        nextQuestionBtn.addEventListener('click', displayQuestion);

        // Initialiser avec une première question (optionnel, ou laisser le message par défaut)
        // Si vous voulez afficher une question dès le chargement:
        displayQuestion();
        // Sinon, commentez la ligne ci-dessus et l'utilisateur devra cliquer sur "Nouvelle Question".
        // Dans ce cas, ajustez le message initial dans `question-area`.
        // Si vous ne lancez pas `displayQuestion()` au début, il faut cacher le bouton "Afficher la réponse" initialement.
        if (!currentQuestion) {
             showAnswerBtn.style.display = 'none';
             questionArea.textContent = "Appuyez sur \"Nouvelle Question\" pour commencer !";
        }

    </script>

</body>
